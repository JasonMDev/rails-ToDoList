<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container navbar-container">
    
    <%= link_to ('<span class="glyphicon glyphicon-list-alt"></span>').html_safe, root_path, id: "logo" %>
    
    <!-- Smaller and Mobile Screen Nav bar-->
    <div class="navbar-header">
      <!-- Navbar Toggle Button-->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">            
        <span class="sr-only">Toggle Navigation </span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button> <!-- /navbar toggle button-->      
    </div> <!-- /navbar-header {Mobile Screen}-->

    <nav class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>        
        <% if user_signed_in? %>
          <% if signed_in? && current_user.admin? %>
            <li><%= link_to "Users", users_path %></li>
          <% end %>  
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Change Password", edit_user_password_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to('Login', new_user_session_path) %>
        <% end %>            

      </ul>
          

    </nav>

  </div>
</header>
