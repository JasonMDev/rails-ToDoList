<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container navbar-container">
    
    <%= link_to "Bike Basingstoke", root_path, id: "logo" %>
    
    <!-- Smaller and Mobile Screen Nav bar-->
    <div class="navbar-header">
      <!-- Navbar Toggle Button-->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">            
        <span class="sr-only">Toggle Navigation </span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button> <!-- /navbar toggle button-->      
    </div> <!-- /navbar-header {Mobile Screen}-->

    <nav class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", '#' %></li>
        <li><%= link_to "Contact", '#' %></li>
        <li><%= link_to 'Show Products', '#' %></li>
        
        <% if user_signed_in? %>
          <% if signed_in? && current_user.admin? %>
            <li><%= link_to "Users", '#' %></li>
          <% end %>  
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", '#' %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to('Logout', '#', :method => :delete) %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to('Login', '#') %>
        <% end %>            

      </ul>

      <!-- Search Form -->
      <%= render 'layouts/search_form' %>      

    </nav>

  </div>
</header>
